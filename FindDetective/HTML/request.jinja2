{% extends "base.jinja2" %}
{% block css %}<link rel="stylesheet" href="{{ url_for('static', filename='HTML/static/baseStyle.css') }}"/> {% endblock %}
{% block content %}
    <form action="{{request.route_url('add',action=action)}}" method="post" class="form">
        {% for error in form.title.errors %}
            <div class="error">{{ error }}</div>
        {% endfor %}

        <div class="form-group">
            <label for="title">{{ form.title.label }}</label>
            {{ form.title(class_='form-control') }}
        </div>

        {% for error in form.text.errors %}
            <div class="error">{{ error }}</div>
        {% endfor %}

        <div class="form-group">
            <label for="text">{{ form.text.label }}</label>
            {{ form.text(class_='form-control') }}
        </div>
        <div class="form-group">
            <label></label>
            <button type="submit" class="btn btn-default">Submit</button>
        </div>


    </form>
    <p><a href="{{ request.route_url('index') }}">Go Back</a></p>
{% endblock %}