{% extends "base.jinja2" %}

{% block content %}

    {% if request.authenticated_userid %}
        Welcome <strong>{{request.authenticated_userid}}</strong> ::
        <a href="{{request.route_url('auth',action='out')}}">Sign Out</a>

        <form action="/propose/{{idPost}}" method="post" class="form">

            <div class="form-group">
                {{ form.title(class_='form-control',placeholder="Тема") }}
            </div>
            </br>

            <div class="form-group">
                {{ form.description(class_='form-control',placeholder="Описание услуги") }}
            </div>
            </br>

            <div class="form-group">
                {{ form.phone(class_='form-control',placeholder="Телефон") }}
            </div>
            <br/>
            <div class="form-group">
                 <label></label>
                 <button type="submit" class="btn btn-default">Подать заявку</button>
            </div>
        </div>
        </form>
    {% endif %}
{%endblock%}
